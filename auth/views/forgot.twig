{% extends "auth/views/layout.twig" %}
{% block contents %}
<div class="row">
    <div class="col-sm-6">
        <h4>Password Recovery</h4>
        <form method="post">
            <div class="form-group">
                <label>Email Address</label>
                <input class="form-control" type="email" name="email" placeholder="Email Address" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Help me recover"/>
            </div>
        </form>
    </div>
</div>
{% endblock %}